[core]
  excludesfile = ~/.gitignore
  legacyheaders = false
[user]
  name = Mikkel Hoegh
  email = mikkel@hoegh.org
[format]
  numbered = auto
[repack]
  usedeltabaseoffset = true
[color]
  ui = auto
  interactive = auto
[alias]
  st = status
  ci = commit
  co = checkout
  staged = "diff --cached"
  oneline = "log --pretty=oneline"
  llog = log --date=local
  changes = diff --name-status -r
  unadd = update-index --force-remove
[merge]
  tool = changesapp
[mergetool "changesapp"]
  cmd = /usr/bin/env chdiff --wait "$LOCAL" "$REMOTE"
  keepBackup = false
  trustExitCode = false
[mergetool "opendiff"]
  cmd = /usr/bin/opendiff -merge="$PWD/$MERGED" -ancestor="$PWD/$BASE" "$PWD/$LOCAL" "$PWD/$REMOTE"
  keepBackup = false
  trustExitCode = false
[github]
  user = mikl

