# vim: set ts=4 sw=4 et:
[core]
	hooksPath = .githooks
	legacyheaders = false
	quotepath = false
	autocrlf = false
	editor = nvim
	pager = delta
[init]
	defaultBranch = master
[user]
	name = Mikkel Hoegh
	email = mikkel@hoegh.org
{{- if .git.sshsign.key }}
	signingkey = {{ .git.sshsign.key }}
{{- end }}
[format]
	numbered = auto
[pull]
	# Do fast-forward only merges on `git pull`
	rebase = false
	ff = only
[push]
	default = simple
	autoSetupRemote = true
[repack]
	usedeltabaseoffset = true
[color]
	ui = auto
	interactive = auto
[alias]
	br = branch
	st = status
	ci = commit
	co = checkout
	staged = "diff --cached"
	oneline = "log --pretty=oneline"
	llog = log --date=local
	changes = diff --name-status -r
	unadd = update-index --force-remove
[interactive]
	diffFilter = delta --color-only
[fetch]
	prune = true
[delta]
    navigate = true
[merge]
	conflictstyle = zdiff3
[rerere]
	enabled = 1
[rebase]
	autoStash = 1
[github]
	user = mikl
[mergetool]
	keepBackup = false
	prompt = false
# Shortcuts
[url "ssh://mikl@git.drupal.org/project/"]
	insteadOf = "drupal:"
[url "ssh://mikl@git.drupal.org/sandbox/"]
	insteadOf = "drupalsand:"
{{- if .git.sshsign.key }}
[gpg]
	format = ssh
[commit]
	gpgsign = true
[tag]
	forceSignAnnotated = true
{{- if .git.sshsign.program }}
[gpg "ssh"]
	program = {{ .git.sshsign.program }}
{{- end -}}
{{ end -}}
{{- if eq .chezmoi.os "darwin" }}
[credential]
	helper = osxkeychain
{{ end }}
